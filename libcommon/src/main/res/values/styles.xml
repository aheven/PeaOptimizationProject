<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTransparent">
        <item name="background">@android:color/transparent</item>
        <item name="lineSize">0dp</item>
        <item name="android:layout_height">@dimen/height_status_bar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="leftIcon">@mipmap/icon_back_black</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/font_color_normal</item>
    </style>

    <style name="NormalText">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/font_color_normal</item>
    </style>

    <style name="HintText">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/font_color_gray</item>
    </style>

    <style name="LinkText">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/default_blue</item>
    </style>
</resources>