<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 登入页面输入框样式 -->
    <style name="LoginEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_height_search_edit</item>
        <item name="android:layout_marginLeft">@dimen/login_margin_search_edit</item>
        <item name="android:layout_marginRight">@dimen/login_margin_search_edit</item>
        <item name="android:paddingLeft">@dimen/login_padding_search_edit</item>
        <item name="android:paddingRight">@dimen/login_padding_search_edit</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColorHint">@color/font_color_gray</item>
        <item name="android:textColor">@color/font_color_normal</item>
        <item name="background">@drawable/login_bg_search_edit</item>
    </style>

    <!-- 登录页面按钮样式 -->
    <style name="LoginBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/login_height_search_edit</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_lage</item>
    </style>

    <!-- 登录页面线条样式 -->
    <style name="LoginLine">
        <item name="android:layout_width">@dimen/login_line_width</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/font_color_gray</item>
    </style>

    <!-- 登录页文本样式 -->
    <style name="LoginTextTrack" parent="NormalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 登录页文本警告样式 -->
    <style name="LoginWarnText">
        <item name="android:textSize">@dimen/font_size_lage</item>
        <item name="android:textColor">@color/default_red</item>
    </style>
</resources>